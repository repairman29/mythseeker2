{
  "name": "mythseeker",
  "version": "2.0.0",
  "description": "AI-powered tabletop RPG platform",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "NODE_OPTIONS=\"--max-old-space-size=12288\" tsc && vite build",
    "build:memory": "NODE_OPTIONS=\"--max-old-space-size=16384\" tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "test:performance": "node scripts/performance-test.js",
    "test:all": "npm run type-check && npm run lint && npm run test:performance",
    "deploy": "./scripts/deploy.sh",
    "deploy:staging": "./scripts/deploy.sh staging",
    "deploy:production": "./scripts/deploy.sh production",
    "monitor": "./scripts/monitor-deployment.sh",
    "verify-secrets": "./scripts/verify-secrets.sh",
    "setup-secrets": "./scripts/add-secrets.sh",
    "get-firebase-config": "./scripts/get-firebase-config.sh",
    "setup-dev": "./scripts/setup-dev.sh"
  },
  "dependencies": {
    "@google-cloud/aiplatform": "^3.8.0",
    "@react-spring/three": "^9.7.3",
    "@react-three/drei": "^9.88.13",
    "@react-three/fiber": "^8.15.11",
    "@types/three": "^0.158.0",
    "firebase": "^10.7.1",
    "lucide-react": "^0.294.0",
    "openai": "^4.20.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "three": "^0.158.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.20",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "terser": "^5.43.1",
    "typescript": "^5.2.2",
    "vite": "^4.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
